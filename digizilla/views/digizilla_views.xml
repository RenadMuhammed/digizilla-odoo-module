<odoo>
    <!-- Form View -->
    <record id="view_digizilla_form" model="ir.ui.view">
        <field name="name">digizilla.form</field>
        <field name="model">digizilla.record</field>
        <field name="arch" type="xml">
            <form string="Digizilla">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="gender"/>
                        <field name="country_id"/>
                        <field name="birth_date"/>
                        <field name="age"/>
                        <field name="tags"/>
                        <field name="customer_id"/>
                        <field name="no_of_sales_orders"/>
                    </group>
                    <notebook>
                        <page string="Notes">
                            <field name="notes"/>
                        </page>
                        <page string="Comments">
                            <field name="comments"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree / List View -->
    <record id="view_digizilla_tree" model="ir.ui.view">
        <field name="name">digizilla.tree</field>
        <field name="model">digizilla.record</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="age"/>
                <field name="tags"/>
                <field name="birth_date"/>
                <field name="country_id"/>
                <field name="gender"/>
                <field name="customer_id"/>
                <field name="no_of_sales_orders"/>
            </tree>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_digizilla_kanban" model="ir.ui.view">
        <field name="name">digizilla.kanban</field>
        <field name="model">digizilla.record</field>
        <field name="arch" type="xml">
            <kanban>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <strong><field name="name"/></strong>
                            <div>Age: <field name="age"/></div>
                            <div>Customer: <field name="customer_id"/></div>
                            <div>Tags: <field name="tags"/></div>
                            <div>Sales Orders: <field name="no_of_sales_orders"/></div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>
